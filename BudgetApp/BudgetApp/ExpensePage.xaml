<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetApp.ExpensePage">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="CategoryPicker"
        Title="{Binding Type, Mode=TwoWay, FallbackValue='Choose a category'}"
        SelectedItem="{Binding Type}">
                </Picker>
                <Editor x:Name="Amount"
                    Text="{Binding Amount, Mode=TwoWay, FallbackValue=0}"
                    Placeholder="Enter the amount spent"
                    HeightRequest="100" />
            <DatePicker x:Name="Date" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Text="Save" Clicked="OnSaveButton_Clicked" />
                    <Button Text="Delete" Grid.Column="1" Clicked="OnDeleteButton_Clicked" />
                </Grid>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>