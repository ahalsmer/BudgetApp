<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetApp.NewExpensePage">
    <ContentPage.Content>
        <StackLayout>
            <Editor x:Name="AmountText"
                    Placeholder="Amount (0.00)"
                    HeightRequest="100" />
            <Editor x:Name="DateText"
                    Placeholder="Date of Purchase (00/00/0000)"
                    HeightRequest="100" />
            <Button x:Name="housingButton"
                            Margin="10,0,0,0"
                            Background="LightSteelBlue"
                            ToolTipService.ToolTip="Housing Expense"
                            Click="housingButton_Click" >
                <Image Source="/Assets/Images/home-icon.png"
                               Width="50"
                               Height="50"
                               Opacity="0.5" />
            </Button>
            <Button x:Name="transportationButton"
                            Margin="10,0,0,0"
                            Background="LightSteelBlue"
                            ToolTipService.ToolTip="Transportation Expense"
                            Click="transportationButton_Click" >
                <Image Source="/Assets/Images/transportation-icon.png"
                               Width="50"
                               Height="50"
                               Opacity="0.5" />
            </Button>
            <Button x:Name="foodButton"
                            Margin="10,0,0,0"
                            Background="LightSteelBlue"
                            ToolTipService.ToolTip="Food Expense"
                            Click="foodButton_Click" >
                <Image Source="/Assets/Images/food-icon.png"
                               Width="50"
                               Height="50"
                               Opacity="0.5" />
            </Button>
            <Button x:Name="clothingButton"
                            Margin="10,0,0,0"
                            Background="LightSteelBlue"
                            ToolTipService.ToolTip="Clothing Expense"
                            Click="clothingButton_Click" >
                <Image Source="/Assets/Images/shopping-icon.png"
                               Width="50"
                               Height="50"
                               Opacity="0.5" />
            </Button>
            <Button x:Name="entertainmentButton"
                            Margin="10,0,0,0"
                            Background="LightSteelBlue"
                            ToolTipService.ToolTip="Entertainment Expense"
                            Click="entertainmentButton_Click" >
                <Image Source="/Assets/Images/entertainment-icon.png"
                               Width="50"
                               Height="50"
                               Opacity="0.5" />
            </Button>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Text="Save" Clicked="OnSaveButton_Clicked" />
                <Button Text="Delete" Grid.Column="1" Clicked="OnDeleteButton_Clicked" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>