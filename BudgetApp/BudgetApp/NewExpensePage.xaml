<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetApp.NewExpensePage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Editor x:Name="AmountText"
                    Placeholder="Amount (0.00)"
                    HeightRequest="100" />
            <Editor x:Name="DateText"
                    Placeholder="Date of Purchase (00/00/0000)"
                    HeightRequest="100" />
            <RadioButton x:Name="housing"
                         Content="Housing Expense"
                         Background="LightSteelBlue"
                         CheckedChanged="category_CheckedChanged" 
                         IsChecked="True"
                         HorizontalOptions="CenterAndExpand"
                         WidthRequest="300"
                         Opacity="0.5">
                
            </RadioButton>
            <RadioButton x:Name="transportation"
                         Content="Transportation Expense"
                         Background="LightSteelBlue"
                         CheckedChanged="category_CheckedChanged"
                         HorizontalOptions="CenterAndExpand"
                         WidthRequest="300"
                         Opacity="0.5">
                
            </RadioButton>
            <RadioButton x:Name="food"
                         Content="Food Expense"
                         Background="LightSteelBlue"
                         CheckedChanged="category_CheckedChanged"
                         HorizontalOptions="CenterAndExpand"
                         WidthRequest="300"
                          Opacity="0.5">
                
            </RadioButton>
            <RadioButton x:Name="shopping"
                         Content="Shopping Expense"
                         Background="LightSteelBlue"
                         CheckedChanged="category_CheckedChanged"
                         HorizontalOptions="CenterAndExpand"
                         WidthRequest="300"
                         Opacity="0.5">
                
            </RadioButton>

            <RadioButton x:Name="entertainment"
                    Content="Entertainment Expense"
                    Background="LightSteelBlue"
                    CheckedChanged="category_CheckedChanged"
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="300"
                    Opacity="0.5">
                
            </RadioButton>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Text="Save" Clicked="OnSaveButton_Clicked" />
                <Button Text="Delete" Grid.Column="1" Clicked="OnDeleteButton_Clicked" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>